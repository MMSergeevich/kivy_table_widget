#:kivy 1.0

#:import get_color_from_hex kivy.utils.get_color_from_hex

# GUI Structure
<Table>:
    orientation: 'vertical'

    LabelPanel:

        NullLabel:

        # Other objects are added dynamically

    ScrollViewTable:

        ScrollViewBoxLayout:

            NumPanel:

            GridTable:

# Objects options
<LabelPanel>:
    orientation: 'horizontal'
    height: 30
    size_hint: 1, None
    canvas.before:
        Color:
            rgba: get_color_from_hex('#ffffff')
        Rectangle:
            pos: self.pos
            size: self.size

<ScrollViewTable>:
    size_hint: 1, 1
    size: self.size
    # orientation: 'vertical'
    # scroll_timeout: 10
    # scroll_distance: 32
    canvas.before:
        Color:
            rgba: get_color_from_hex('#444444')
        Rectangle:
            pos: self.pos
            size: self.size
    

<ScrollViewBoxLayout>:
    orientation: 'horizontal'
    cols: 2
    size_hint: 1, None # Not scroll without it

<NumPanel>:
    orientation: 'vertical'
    size_hint: None, 1
    width: 30
    canvas.before:
        Color:
            rgba: get_color_from_hex('#ffffff')
        Rectangle:
            pos: self.pos
            size: self.size

<GridTable>:
    size_hint: 1, None # Not scroll without it
    canvas.before:
        Color:
            rgba: get_color_from_hex('#444444')
        Rectangle:
            pos: self.pos
            size: self.size

<NewLabel>:
    text: 'Label'
    size_hint: 1, 1
    valign: 'middle'
    halign: 'center'
    max_lines: 1
    text_size: (self.width, self.height)

<NullLabel>:
    width: 30
    size_hint: None, 1

<NewNumberLabel>:
    size_hint: 1, 1
    font_size: 14
    # font_name: 'Terminus'
    valign: 'middle'
    halign: 'center'
    max_lines: 1
    text_size: (self.width, self.height)

<NewButton>:
    size_hint: 1, None
    font_size: 12
    valign: 'middle'
    background_color: self.DEFAULT_CONFIG_COLOR
    # text_size: (self.width-20, self.height)
    # halign: 'left'